<RontgenBlurSetting>
	
    <!-- Автор: Skino -->
	<!-- Официальная тема: http://www.rf-cheats.ru/forum/showthread.php?p=2314774 -->
	
	<!-- Тип подсветки техники, если true - то полный подсветка, если false - то частичная подсветка. -->
	<fullBlur>true</fullBlur>
	
	<!-- Максимальная дальность подсветки техники. (0 - 400) -->
	<distanceToBlur>50</distanceToBlur>
	
	<!-- Максимальная дальность подсветки техники в определенном угле обзора. (0 - 400) -->
	<disAngleToBlur>200</disAngleToBlur>
	
	<!-- Угол обзора для подсветки техники. (10 - 90) -->
	<dirAngleToBlur>15</dirAngleToBlur>
	
	<!-- Режимы камеры(прицела) в котором работает подсветка техники, перечисление. (arcade, sniper, strategic, postmortem) -->
	<controlModes>arcade, sniper, strategic, postmortem</controlModes>
	
	<!-- Командная принадлежность подсвечиваемой техники, перечисление. (friend, enemy) -->
	<vehicleTypeToBlur>friend, enemy</vehicleTypeToBlur>
	
	<!-- Использовать ли пользовательские цвета подсветки техники. -->
	<customColors>false</customColors>
	
		<!-- Цвет подсветки собственной техники. По умолчанию (128, 128, 128, 255) (r, g, b, a).  -->
		<selfColor>128 128 128 255</selfColor>
		<!-- Цвет подсветки техники союзника. По умолчанию (124, 214, 6, 255) (r, g, b, a). -->
		<friendColor>124 214 6 255</friendColor>
		<!-- Цвет подсветки техники противника. По умолчанию (255, 18, 7, 255) (r, g, b, a). -->
		<enemyColor>255 18 7 255</enemyColor>
		<!-- Цвет подсветки чего-либо в ангаре. По умолчанию (253, 199, 66, 255) (r, g, b, a). -->
		<hangarColor>253 199 66 255</hangarColor>
		<!-- Цвет подсветки техники которую не видно. (r, g, b, a). -->
		<!-- Из-за особенности работы мода, техника с флагом будет подсвечена тем же цветом. -->
		<closedColor>255 255 255 255</closedColor>
	
</RontgenBlurSetting>
